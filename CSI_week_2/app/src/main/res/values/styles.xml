<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange</item>
        <item name="colorAccent">@color/lightOrange</item>
    </style>

    <style name="mainBackgroundStyle">
        <item name="android:background">@color/lightOrange</item>
    </style>

    <style name="linearLayoutStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="suspectViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">259dp</item>
        <item name="android:adjustViewBounds">false</item>
        <item name="android:cropToPadding">false</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="suspectViewStyle.report">
        <item name="android:layout_height">310dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="tableLayoutStyle">
        <item name="android:background">@color/lightOrange</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="editTextStyle">
        <item name="android:editable">false</item>
        <item name="android:inputType">none</item>
    </style>

    <style name="editTextStyle.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="detailHeaderStyle">
        <item name="android:background">@color/white</item>
        <item name="android:editable">false</item>
        <item name="android:inputType">none</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="detailsTextStyle">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
